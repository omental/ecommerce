<div class="jumbotron">
<h1> Handcrafted Items from around the World. </h1>
<h2> Discover one-of-a-kind-items</h2>
</div>
<div class="center">
  <div class="row">
    <% @listings.each do |listing| %>
      <div class="col-md-3">
        <div class="thumbnail">
          <%= link_to image_tag(listing.image.url), listing  %>
        <div class="caption">
          <h5><%= listing.name %></h5>
          <p><%= number_to_currency(listing.price) %></p>
          <p> <%= "Sold By #{listing.user.name}" %></p>
        </div>
      </div>
      </div>
      <% end %>
  </div>
</div>
<br>

<%if user_signed_in? %>

<%= link_to 'New Listing', new_listing_path, class: "btn btn-link" %>
<% end %>